public class Filme {
	String nome;
	int anoLancamento;
	boolean incluidoAssinatura;
	double somaAvaliacao;
	int quantidadeAvaliacao;
	int duracaoMinutos;
	
	void mostraDados() {
		System.out.println("Nome do filme: " + nome);
		System.out.println("Ano do lançamento: " + anoLancamento);
		System.out.println("Duração: " + duracaoMinutos + " minutos");
		System.out.println("Nota de avaliação: " + somaAvaliacao);
		System.out.println("Quantidade de avaliações: " + quantidadeAvaliacao);
	}
	
	void avaliaFilme(double nota) {
		somaAvaliacao += nota;
		quantidadeAvaliacao++;
	}
	
	double mediaAvaliacao() {
		return (somaAvaliacao / quantidadeAvaliacao);
	}
}
