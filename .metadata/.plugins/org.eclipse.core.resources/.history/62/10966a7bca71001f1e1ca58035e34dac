import java.util.ArrayList;
import java.util.Scanner;

import br.com.pessoa.modelo.Pessoa;

public class Principal {

	public static void main(String[] args) {
		
		String nome = "";
		int idade = 0;
		Scanner escaneador = new Scanner(System.in);
		ArrayList<Pessoa> pessoa = new ArrayList<>();
		//var pessoa = new ArrayList<Pessoa>(); // outra implementação válida
		
		Pessoa humano = new Pessoa();
		
		
		
		for(int i = 0; i < 3; i++) {
			System.out.println("Informe o nome da pessoa: ");
			escaneador.next(nome);
			
			System.out.println("Informe a idade da pessoa: ");
			escaneador.nextInt(idade);
			
			humano.setNome(nome);
			humano.setIdade(idade);
			
			pessoa.add(humano);
		}
		
		System.out.println("<-- Dados --> \nTamanho da string: "+ pessoa.size());
		System.out.println("Pessoa: " + pessoa.toString());
		
	}

}
