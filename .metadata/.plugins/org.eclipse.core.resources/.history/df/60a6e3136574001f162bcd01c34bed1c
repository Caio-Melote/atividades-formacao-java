package br.com.busca.principal;

import java.io.IOException;
import java.net.URI;
import java.net.http.HttpClient;
import java.net.http.HttpRequest;
import java.net.http.HttpResponse;
import java.net.http.HttpResponse.BodyHandlers;

import javax.print.attribute.SetOfIntegerSyntax;

import com.google.gson.Gson;

import br.com.busca.modelo.Titulo;

public class Principal {

	public static void main(String[] args) throws IOException, InterruptedException {
		
		Titulo titulo = new Titulo();
		
		HttpClient client = HttpClient.newHttpClient();

		HttpRequest request = HttpRequest.newBuilder()
		      .uri(URI.create("http://www.omdbapi.com/?apikey=6585022c&t=matrix"))
		      .build();
		
		HttpResponse<String> response = client
				  .send(request, BodyHandlers.ofString());
		
		System.out.println("Resposta: " + response.body());
		
		Gson gson = new Gson();
		titulo = gson.fromJson(response.body(), Titulo.class);
		
		System.out.println("Titulo: " + titulo.getNome());
	}

}
