import java.util.Scanner;

public class Loop {

	public static void main(String[] args) {
		Scanner escaneador = new Scanner(System.in);
		int i;
		double media, nota = 0;
		
		for (i = 0; i < 3; i++) {
			System.out.println("Digite a nota" + i+1 + "para o filme:");
			nota = escaneador.nextDouble();
			media += nota;
		}
		
		System.out.println("A nota final Ã© de: " + media/3);
	}

}
